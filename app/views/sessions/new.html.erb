<p class = "lead">Existing User: Log in</p>

<%= form_tag(session_path, method: :post) do %>
	<p>
		<%= label_tag "user[name]", "User name" %>
		<%= text_field_tag "user[name]" %>
	</p>

	<p>
		<%= label_tag "user[password]", "Password" %>
		<%= password_field_tag "user[password]" %>
	</p>

	<p>
		<%= submit_tag "Log In" %>
	</p>	
<% end %>